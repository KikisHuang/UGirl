<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
         />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_corner1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/panorama_click"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@drawable/white_corners"
            android:gravity="center"
            android:text="全景模式"
            android:textColor="@color/gray3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/glasses_click"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="眼镜模式"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/play_click_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/panorama_img"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/play_img"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/play_img" />

        <LinearLayout
            android:id="@+id/glasses_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/glasses_img1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"

                />

            <ImageView
                android:id="@+id/glasses_img2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"

                />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击播放"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/video_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="11dp" />


    </LinearLayout>


</FrameLayout>