<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:orientation="vertical">

    <!-- 排行榜前三特定item -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/top_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/ranking_one"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/top_icon0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/test_icon"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/number_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="1dp"
                    android:text="No.1"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/top_name0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/top_sub_number0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right|bottom"
                android:paddingRight="7dp"
                android:text="订阅量2.8万"
                android:textColor="@color/black8"
                android:textSize="9dp"

                />

        </FrameLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/mid_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/ranking_two"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/top_icon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/test_icon" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/number_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="4.5dp"
                    android:layout_marginLeft="1dp"
                    android:text="No.2"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/top_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/top_sub_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right|bottom"
                android:paddingRight="7dp"
                android:text="订阅量2.8万"
                android:textColor="@color/black8"
                android:textSize="9dp"

                />

        </FrameLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/bottom_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/ranking_three"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/top_icon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/test_icon"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/number_three" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="4.5dp"
                    android:text="No.3"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/top_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/top_sub_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right|bottom"
                android:paddingRight="7dp"
                android:text="订阅量2.8万"
                android:textColor="@color/black8"
                android:textSize="9dp"

                />

        </FrameLayout>


    </RelativeLayout>

</LinearLayout>