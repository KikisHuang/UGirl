<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_ad_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/gray3"
            android:text="6294000\n共筹集范币"
            android:textSize="12dp" />

        <TextView style="@style/line_styles_ove_h" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:textColor="@color/gray3"
            android:text="6294000\n共筹集范币"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        style="@style/line_styles_ove_w"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actions_detail"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/actions_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="预订且出发日期均在活动期间，通过携程网包含1-2晚住宿的短途巴士游，短途自驾游，短途轮船产品（具体请见各产品的“特别优惠”信息），每2位成人预订可获赠1人出行金额的不限额旅游抵用券。每2位成人预订可获赠1人出行金额的不限额旅游抵用券。每2位成人预订可获赠1人出行金额的不限额旅游抵用券。每2位成人预订可获赠1人出行金额的不限额旅游抵用券。"
            android:textColor="@color/gray3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/actions_detail"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/gray7"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        style="@style/line_styles_10"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ptt_model"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/icon_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
    <TextView
        style="@style/line_styles_10"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
