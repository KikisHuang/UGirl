<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_bakc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@mipmap/test_icon"
                android:transitionName="transition_morph_view"

                />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_1"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv1"
                style="@style/SlideMenuText"
                android:text="充值" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-28dp"
                android:src="@drawable/recha_font" />
        </LinearLayout>

        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_3"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv3"
                style="@style/SlideMenuText"
                android:text="已购买的" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-32dp"
                android:src="@drawable/purch_font" />

        </LinearLayout>

        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_5"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv5"
                style="@style/SlideMenuText"
                android:text="分享" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-22dp"
                android:src="@drawable/share_font" />
        </LinearLayout>


        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_6"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv6"
                style="@style/SlideMenuText"
                android:text="客服" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-30dp"
                android:src="@drawable/servic_font" />
        </LinearLayout>


        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_7"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv7"
                style="@style/SlideMenuText"
                android:text="设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-27dp"
                android:src="@drawable/setting_font" />
        </LinearLayout>


        <View style="@style/line_styles" />
    </LinearLayout>

</LinearLayout>