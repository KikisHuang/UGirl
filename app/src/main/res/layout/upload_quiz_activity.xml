<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout"></include>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="视频问答"
            android:textColor="@color/cherry"
            android:textSize="15dp" />

        <TextView
            style="@style/line_styles_ove_w"
            android:layout_gravity="center|bottom" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_gravity="center|bottom"
            android:background="@color/cherry" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/wx_icon"
            android:background="@drawable/gray_corner6"
            android:gravity="left|center|top"
            android:hint="请输入你的问题"
            android:padding="10dp"
            android:textColorHint="@color/gray4"
            android:textSize="14dp" />

        <TextView
            style="@style/line_styles_ove_w"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/question_icon1"
        />

        <example.com.fan.view.RippleView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/cherry_corner4"
            android:layout_marginLeft="10dp"
            android:text="随机选问题"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="打赏金额："
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/price_tv"
            android:gravity="center"
            android:text="￥"
            android:textColor="@color/red1"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/price_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/place_tv"
            android:layout_toLeftOf="@+id/tag_tv"
            android:background="@color/white"
            android:hint="0"
            android:textColor="@color/red1"
            android:textColorHint="@color/red1"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="(8-68/元)"
            android:textColor="@color/content6"
            android:textSize="15dp" />

        <TextView
            style="@style/line_styles_ove_w"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <example.com.fan.view.RippleView
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cherry_corner4"
        android:gravity="center"
        android:text="@string/send_hb"
        android:textColor="@color/white"
        ripple:alphaFactor="0.5"
        ripple:hover="false"
        ripple:rippleColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="对方在72小时未回答，钱款自动退回！"
        android:textColor="@color/content6"
        android:textSize="13dp" />
</LinearLayout>