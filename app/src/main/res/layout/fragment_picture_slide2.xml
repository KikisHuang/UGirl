<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_main_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:id="@+id/buy_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/buy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13dp" />

        <Button
            android:id="@+id/buy_bt"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/white_corner1"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/load_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/bottom_Advertisement_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/bottom_Advertisement_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_icon2"
            />

        <TextView
            android:id="@+id/adver_close_tv"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_gravity="right|top"
            android:background="#fdfafb"
            android:gravity="center"
            android:paddingRight="4dp"
            android:text="关闭"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/adv_close_icon" />
    </FrameLayout>
</FrameLayout>