<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 完善基础信息布局-->
    <LinearLayout
        android:id="@+id/over_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/renz_btn"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="完善基础信息"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/city_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="所在城市"
                android:textColor="@color/black"
                android:textColorHint="@color/content6"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView style="@style/line_styles_ove_w" />

        <LinearLayout
            android:id="@+id/BWH_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/BWH_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="三围"
                android:focusable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/content6"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:src="@mipmap/more_img3" />

        </LinearLayout>

        <TextView style="@style/line_styles_ove_w" />

        <LinearLayout
            android:id="@+id/height_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/height_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="身高"
                android:focusable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/content6"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:src="@mipmap/more_img3" />

        </LinearLayout>

        <TextView style="@style/line_styles_ove_w" />

        <LinearLayout
            android:id="@+id/wx_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wx_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="微信号"
                android:textColor="@color/black"
                android:textColorHint="@color/content6"
                android:textSize="13dp" />


        </LinearLayout>

        <TextView style="@style/line_styles_ove_w" />

        <FrameLayout
            android:id="@+id/upload_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_border_corner">

            <ImageView
                android:id="@+id/add_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@mipmap/add_icon3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_img"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="上传照片"
                android:textColor="@color/content6"
                android:textSize="12dp" />
            <ImageView
                android:id="@+id/back_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </FrameLayout>


        <example.com.fan.view.RippleView
            android:id="@+id/commint_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_bt_normal"
            android:gravity="center"
            android:text="@string/comment_apply"
            android:textColor="@color/white"
            android:textSize="15dp"
            ripple:alphaFactor="0.5"
            ripple:hover="false"
            ripple:rippleColor="@color/white" />

    </LinearLayout>

</LinearLayout>