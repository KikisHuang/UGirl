<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_gravity="center|bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            >
            <ImageView
                android:id="@+id/home_page_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:text="萧敬腾"
                    android:textColor="@color/white"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/profession_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="1dp"
                    android:text="模特"
                    android:textColor="@color/gray4"
                    android:textSize="10dp" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/city_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View style="@style/line_styles_ove_h1"></View>

                    <TextView
                        android:id="@+id/bwh_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="三围\n85/65/90"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <View style="@style/line_styles_ove_h1"></View>

                    <TextView
                        android:id="@+id/height_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="身高\n172"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/follwCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/lightblue"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue3"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/attention_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue3"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>


</FrameLayout>
