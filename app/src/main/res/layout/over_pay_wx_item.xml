<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/headimg_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/test_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headimg_img"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="覃老"
                android:maxEms="8"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/pay_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-15"
                android:textColor="@color/content6"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/wx_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/headimg_img"
            android:text="Ta的微信号：110"
            android:maxEms="18"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/cherry2"
            android:textSize="13dp" />
    </RelativeLayout>

    <TextView style="@style/line_styles_5" />
</LinearLayout>