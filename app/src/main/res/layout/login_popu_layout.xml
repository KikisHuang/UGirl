<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:layout_marginTop="125dp"
        android:paddingRight="25dp"
        android:background="@drawable/lucency96"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userid_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/photo_img" />

            <EditText
                android:id="@+id/user_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:inputType="phone"
                android:hint="手机号"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray3"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/clear_img"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:src="@mipmap/clear_img"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/userpass_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="horizontal"
                android:paddingLeft="10dp">


                <ImageView
                    android:id="@+id/pass_icon"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/unpass_icon" />

                <EditText
                    android:id="@+id/pass_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:hint="验证码"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray3"
                    android:textSize="13dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cherry_corner3"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_pp_bt_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="@drawable/login_pp_tvcolor_selector"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <TextView
                android:id="@+id/register_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册账号"
                android:textColor="@color/blackk"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/qq_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/qq_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="QQ登录"
                    android:textColor="@color/blackk"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wechat_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/wechat_pay1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="微信登录"
                    android:textColor="@color/blackk"
                    android:textSize="11dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/login_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="@color/blackk"
            android:textSize="11dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:src="@drawable/login_popup_icon"
        android:layout_gravity="center|top"
        />
</FrameLayout>